<h1>New Order</h1>

<% if @order.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
    <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @order, url: buffet_orders_path(@buffet), local: true) do |form| %>
  <div class="form-group">
    <%= form.collection_select :event_type_id, @event_types, :id, :name, { prompt: "Select Event Type" }, class: "form-control", placeholder: "Event Type" %>
  </div>

  <div class="form-group">
    <%= form.date_field :event_date, class: "form-control", placeholder: "Event Date" %>
  </div>

  <div class="form-group">
    <%= form.number_field :guest_count, class: "form-control", placeholder: "Number of Guests" %>
  </div>

  <div class="form-group">
    <%= form.text_area :details, class: "form-control", placeholder: "Event Details" %>
  </div>

  <div class="form-group">
    <%= form.text_field :alternative_address, class: "form-control", placeholder: "Alternative Address" %>
  </div>


  <div class="form-group">
    <%= form.submit "Create Order", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', :back %>
