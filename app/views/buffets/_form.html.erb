<%= form_with(model: buffet, local: true) do |form| %>
  <% if buffet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(buffet.errors.count, t('views.buffet.form.error_explanation.title', count: buffet.errors.count)) %></h2>
      <ul>
        <% buffet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, t('activerecord.attributes.buffet.name') %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :company_name, t('activerecord.attributes.buffet.company_name') %>
    <%= form.text_field :company_name %>
  </div>

  <div class="field">
    <%= form.label :cnpj, t('activerecord.attributes.buffet.cnpj') %>
    <%= form.text_field :cnpj %>
  </div>

  <div class="field">
    <%= form.label :phone, t('activerecord.attributes.buffet.phone') %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :contact_email, t('activerecord.attributes.buffet.contact_email') %>
    <%= form.email_field :contact_email %>
  </div>

  <div class="field">
    <%= form.label :address, t('activerecord.attributes.buffet.address') %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :district, t('activerecord.attributes.buffet.district') %>
    <%= form.text_field :district %>
  </div>

  <div class="field">
    <%= form.label :state, t('activerecord.attributes.buffet.state') %>
    <%= form.text_field :state %>
  </div>

  <div class="field">
    <%= form.label :city, t('activerecord.attributes.buffet.city') %>
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.label :zip_code, t('activerecord.attributes.buffet.zip_code') %>
    <%= form.text_field :zip_code %>
  </div>

  <div class="field">
    <%= form.label :description, t('activerecord.attributes.buffet.description') %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :payment_methods, t('activerecord.attributes.buffet.payment_methods') %>
    <%= form.text_area :payment_methods %>
  </div>

  <div class="actions">
    <%= form.submit t('helpers.submit.buffet.create') %>
  </div>
<% end %>
